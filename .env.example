# LLM Configuration
# Provider can be: openai, google-genai, deepseek, ollama
LLM_API_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-3.5-turbo
# LLM_API_URL is required for deepseek and ollama
# Example for Ollama: http://localhost:11434/v1
# Example for DeepSeek: https://api.deepseek.com/v1
# LLM_API_URL=http://localhost:11434/v1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# CORS Configuration
# Comma-separated list of origins, use * for all
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Media Configuration
MEDIA_DIR=media
UPLOAD_DIR=uploads
